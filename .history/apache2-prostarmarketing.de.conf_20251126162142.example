# Apache2-Konfiguration für prostarmarketing.de (Landingpage mit SSL & Reverse Proxy)
#
# Lege diese Datei auf deinem Server unter /etc/apache2/sites-available/prostarmarketing.de.conf ab.
# Passe ggf. DocumentRoot und Ports an deine Struktur an.

<VirtualHost *:80>
    ServerName www.prostarmarketing.de
    ServerAlias prostarmarketing.de

    # Weiterleitung auf HTTPS
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1 [R=301,L]
</VirtualHost>

<VirtualHost *:443>
    ServerName www.prostarmarketing.de
    ServerAlias prostarmarketing.de

    # SSL-Zertifikat (Certbot setzt diese Einträge automatisch)
    SSLEngine on
    SSLCertificateFile /etc/letsencrypt/live/www.prostarmarketing.de/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/www.prostarmarketing.de/privkey.pem
    Include /etc/letsencrypt/options-ssl-apache.conf

    # Sicherheitsheader
    Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    Header always set X-Frame-Options DENY
    Header always set X-Content-Type-Options nosniff
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' wss:;"

    # Root für statische Dateien (Landingpage)
    DocumentRoot /var/www/prostarmarketing.de/public

    <Directory /var/www/prostarmarketing.de/public>
        Options -Indexes +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    # Reverse Proxy für Node.js/Express (API auf Port 3000)
    ProxyPreserveHost On
    ProxyPass /api http://localhost:3000/api
    ProxyPassReverse /api http://localhost:3000/api

    # Optional: WebSocket-Proxy (falls benötigt)
    ProxyPass /socket.io/ ws://localhost:3000/socket.io/
    ProxyPassReverse /socket.io/ ws://localhost:3000/socket.io/
</VirtualHost>

# Hinweise:
# - Passe DocumentRoot ggf. an deinen Build-Ordner an (z.B. /var/www/prostarmarketing.de/public)
# - Nach Änderungen: sudo systemctl reload apache2
# - SSL-Zertifikat mit Certbot holen, sobald Domain erreichbar ist
# - Für lokale Tests reicht erstmal nur der :80-Block (ohne SSL)
