# ProStar Landing Page - Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# DATABASE CONFIGURATION
# ================================

# Azure MySQL Connection (Production)
# Format: mysql://user:password@host:port/database?ssl-mode=REQUIRED
DATABASE_URL="mysql://username:password@server.mysql.database.azure.com:3306/database_name?ssl-mode=REQUIRED"

# Alternative: Local Development
# DATABASE_URL="mysql://root:password@localhost:3306/prostar_dev"

# ================================
# SERVER CONFIGURATION
# ================================

# Server port (default: 3000)
PORT=3000

# Node Environment
NODE_ENV=development

# Site URL (for emails and OAuth redirects)
SITE_URL="http://localhost:3000"

# OAuth Server URL
OAUTH_SERVER_URL="http://localhost:3000"

# ================================
# AUTHENTICATION
# ================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET="your-secret-key-here-min-32-characters"

# Session Cookie Settings
COOKIE_DOMAIN="localhost"
COOKIE_SECURE="false"  # Set to "true" in production with HTTPS

# ================================
# EMAIL CONFIGURATION
# ================================

# Email Provider (gmail | ses)
EMAIL_PROVIDER="gmail"

# Gmail SMTP (if using Gmail)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"  # Use App Password, not regular password

# AWS SES (if using SES)
AWS_REGION="eu-central-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"

# Email From Address
EMAIL_FROM="ProStar <noreply@prostar.com>"

# ================================
# STRIPE CONFIGURATION
# ================================

STRIPE_PUBLIC_KEY="pk_test_XXXXXXXXXXXXXXXXXXXXXXXX"
STRIPE_SECRET_KEY="sk_test_XXXXXXXXXXXXXXXXXXXXXXXX"
STRIPE_WEBHOOK_SECRET="whsec_XXXXXXXXXXXXXXXXXXXXXXXX"

# Client (Vite)
VITE_STRIPE_PUBLIC_KEY="${STRIPE_PUBLIC_KEY}"

# ================================
# CAPTCHA CONFIGURATION (Optional)
# ================================

# Captcha Provider: recaptcha | hcaptcha | (empty to disable)
CAPTCHA_PROVIDER=""

# reCAPTCHA v3
CAPTCHA_SECRET=""
RECAPTCHA_MIN_SCORE="0.5"

# hCaptcha
# CAPTCHA_SECRET=""

# ================================
# RATE LIMITING (Optional)
# ================================

# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW="60000"

# Max requests per window (default: 10)
RATE_LIMIT_MAX="10"

# ================================
# AI MODEL CONFIGURATION (Optional)
# ================================

# Active AI Model (default: claude-sonnet-4.5)
AI_MODEL="claude-sonnet-4.5"

# AI Model Provider (anthropic | openai)
AI_MODEL_PROVIDER="anthropic"

# ================================
# VITE CLIENT CONFIGURATION
# ================================

VITE_APP_NAME="ProStar"
VITE_API_BASE_URL="http://localhost:3000/api"
VITE_APP_ID="prostar_landing_page"

# ================================
# DEVELOPMENT OPTIONS
# ================================

# Demo Mode
DEMO_MODE="false"

# Log Level
LOG_LEVEL="info"

# Disable Manus Runtime overlay for debugging (off | on)
MANUS_RUNTIME="on"

