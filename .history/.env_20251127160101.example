# Environment example for local development
# Copy to `.env` and fill values before running `pnpm dev` or `pnpm build`.

# App / Vite
VITE_APP_ID=your_app_id_here

# JWT / cookies
JWT_SECRET=supersecret_jwt_key

# Database (MySQL / MariaDB)
DATABASE_URL=mysql://user:password@localhost:3306/dbname

# OAuth / OpenID Provider used by the app
OAUTH_SERVER_URL=https://oauth.example.com
OWNER_OPEN_ID=owner-openid-value

# Optional built-in forge API (used by some server helpers)
BUILT_IN_FORGE_API_URL=https://forge.example.com
BUILT_IN_FORGE_API_KEY=forge_api_key_here

# Stripe (optional; used by server/stripe routes)
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Runtime
# Environment Example for local development
# Copy to `.env.development` (for Vite client) and `.env.local` (server)
# Do not commit real secrets.

NODE_ENV=development
PORT=3000
DEMO_MODE=true

# Database (Drizzle)
# Use SQLite file by default; switch to Postgres if needed
DATABASE_URL=file:./tmp/dev.db
# POSTGRES_URL=postgres://user:password@localhost:5432/prostar_dev

# Stripe
STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# Email (Nodemailer)
# For local testing, MailHog/MailPit: host=localhost port=1025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="Prostar <noreply@localhost>"

# OAuth (optional)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_CALLBACK_URL=http://localhost:3000/api/auth/callback

# Client (Vite)
VITE_APP_NAME=Prostar
VITE_API_BASE_URL=http://localhost:3000/api
VITE_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}

# Misc
LOG_LEVEL=info
